<section class="h-100 gradient-custom-2 my-5">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col mt-5">
                <div class="card">
                    <div class="rounded-top text-white d-flex flex-row"
                        style="background-color: rgb(33, 37, 41); height:200px;">
                        <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                                alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                                style="width: 150px; z-index: 1">
                            <a href="/auth/edit/{{user._id}}" type="button" class="btn btn-outline-dark"
                                data-mdb-ripple-color="dark" style="z-index: 1;">
                                Edit profile
                            </a>
                        </div>
                        <div class="ms-3" style="margin-top: 100px;">
                            <h2>{{user.name}} {{user.lastname}}</h2>
                            <p>Username: <strong>{{user.username}}</strong></p>
                        </div>
                    </div>
                    <!-- -->
                    <div class="p-4 text-black" style="background-color: #f8f9fa;">
                        <div class="d-flex justify-content-end text-center py-1">
                            <div class="d-flex flex-column">
                                <i class="fa-brands fa-github mb-1 h6"></i>
                                <a class="small text-muted mb-0" href="{{user.github}}">Github</a>
                            </div>
                            <div class="px-3 d-flex flex-column">
                                <i class="fa-brands fa-linkedin mb-1 h6"></i>
                                <a class="small text-muted mb-0" href="{{user.linkedin}}">LinkedIn</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4 text-black">
                        <div class="mb-5">
                            <h3 class="lead fw-normal mb-1">About</h3>
                            <div class="p-4" style="background-color: #f8f9fa;">
                                <p class="font-italic mb-1 mt-3">Email: <strong>{{user.email}}</strong> </p>
                                <p class="font-italic mb-1 mt-3">Genre: <strong>{{user.genre}}</strong> </p>
                                <p class="font-italic mb-0 mt-3">Borndate: <strong>{{user.borndate}}</strong></p>
                                <p class="font-italic mb-0 mt-3">User role: <strong>{{user.role}}</strong></p>
                            </div>

                            <h3 class="lead fw-normal my-3">My Favorites Jobs</h3>
                            <div class="row">
                                {{#each favoritesjobs.favorites}}
                                <div class="col-md-6 my-3 d-flex justify-content-around">
                                    <div class="card" style="width: 30rem;">
                                        {{!-- <img src="images/jobs.jpg" class="card-img-top"> --}}
                                        <div class="card-body">
                                            <h2 class="card-title h6"><strong>Tech Profile</strong>: {{jobTitle}}</h2>
                                            <p class="card-text"><strong>Company</strong>: {{employerName}}</p>
                                            <p class="card-text"><strong>Location</strong>: {{locationName}}</p>
                                            <p class="card-text"><strong>Expiration</strong>: {{expirationDate}}</p>
                                            <div class="row">
                                                <a href="/jobs/{{_id}}" class="btn btn-dark text-white col-md-6"><i
                                                        class="fas fa-link"></i>More
                                                    details</a>
                                                <form class="col-md-6" action="/auth/profile/{{_id}}" method="post">
                                                    <button class="btn btn-danger" type="submit">Delete
                                                        Job</button>
                                                </form>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <form action="/auth/{{user._id}}/delete" method="POST">
            <button class="btn btn-danger mt-3 mb-3" type="submit">Delete Student</button>
        </form>
    </div>
</section>