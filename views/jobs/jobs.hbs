<h1>Jobs</h1>

<div class="container mx-auto mt-4">
    <div class="row">
        {{#each myJobs}}
        <div class="col-md-4 mb-3">
            <div class="card" style="width: 26rem;">
                <img src="images/jobs.jpg" class="card-img-top">
                <div class="card-body">
                    <h2 class="card-title h6">{{title}}</h2>
                    <p class="card-text"><strong>Company</strong>: {{company_name}}</p>
                    <p class="card-text"><strong>Location</strong>: {{location}}</p>
                    {{#if remote}}
                    <p class="card-text"><strong>Remote</strong>: remote working</p>
                    {{/if}}
                    <a href="/jobs/{{slug}}" class="btn btn-dark text-white"><i class="fas fa-link"></i>More
                        details</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>