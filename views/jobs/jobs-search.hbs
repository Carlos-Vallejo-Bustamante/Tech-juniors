<div class="container mx-auto">
    <div class="row mb-5">
        <h1 class="pt-5 text-white mt-5 mb-5"> <strong>Your search result</strong> </h1>
        {{#each results}}
        <div class="col-md-4 mb-3">
            <div class="card card-animation" style="width: 23rem;">
                {{!-- <img src="images/jobs.jpg" class="card-img-top"> --}}
                <div class="card-body">
                    <h3 class="card-title break-text">{{jobTitle}}</h3>
                    <p class="card-text break-text mt-2"><strong>Company</strong>: {{employerName}}</p>
                    <p class="card-text break-text mt-2"><strong>Expiration</strong>: {{expirationDate}}</p>
                    <p class="card-text break-text mt-2"><i class="fa-solid fa-location-pin"></i><strong></strong>
                        {{locationName}}</p>
                    <a href="/jobs/{{jobId}}" class="btn btn-dark text-white mt-4">More
                        details</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>